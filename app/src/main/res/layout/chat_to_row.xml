<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chat_to_row_layout">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_to_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/tv_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/iv_to_row"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/chatBubbleGray"
        android:maxWidth="250dp"
        android:padding="16dp"
        android:text="fadskkjlkf asdjkf jksda jflkjdl kjlfkfadskkjlkf asdjkf jksda jflkjdl kjlfkfadskkjlkf asdjkf jksda jflkjdl kjlfkfadskkjlkf asdjkf jksda jflkjdl kjlfkfadskkjlkf asdjkf jksda jflkjdl kjlfk"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:linksClickable="true"
        android:autoLink="web"/>

    <TextView
        android:id="@+id/tv_created_at_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_to_row"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/iv_to_row"
        android:text="12:00"
        android:textColor="@color/backgroundDark"
       />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/animated_button"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/iv_to_row"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"/>
</RelativeLayout>



